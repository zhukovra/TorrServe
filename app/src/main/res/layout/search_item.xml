<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:clickable="true"
    android:padding="5sp">

    <View
        android:id="@+id/searchDivider"
        android:layout_width="3dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="5dp"
        android:layout_weight="0"
        android:background="@color/orange"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/torrentSearchTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:text=""
                tools:text="Marvel's Guardians of the Galaxy - Official Reveal Trailer" />

            <TextView
                android:id="@+id/torrentSeedsCount"
                android:layout_width="40sp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5sp"
                android:layout_weight="0"
                android:gravity="center_horizontal"
                android:textColor="@color/green"
                android:text=""
                tools:text="9999" />

            <TextView
                android:id="@+id/torrentLeechesCount"
                android:layout_width="40sp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:gravity="center_horizontal"
                android:textColor="@color/orange"
                android:text=""
                tools:text="99" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/torrentSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:layout_marginEnd="15sp"
                android:textColor="@color/mid_gray"
                android:text=""
                tools:text="99.9 GB" />

            <TextView
                android:id="@+id/torrentDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:layout_marginEnd="10sp"
                android:textColor="@color/mid_gray"
                android:text=""
                tools:text="01 янв. 2000" />

            <TextView
                android:id="@+id/torrentTracker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/mid_gray"
                android:text=""
                tools:text="rutracker.org" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>